<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <servlet>
        <servlet-name>MascotasServlet</servlet-name>
        <servlet-class>controlador.MascotasServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarServlet</servlet-name>
        <servlet-class>modelo.EliminarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarMascota</servlet-name>
        <servlet-class>modelo.EliminarMascota</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MascotasServlet</servlet-name>
        <url-pattern>/MascotasServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarServlet</servlet-name>
        <url-pattern>/EliminarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarMascota</servlet-name>
        <url-pattern>/EliminarMascota</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
